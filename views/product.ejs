<!-- product.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Bohao's Supermarket</title>
</head>

<body>
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Bohao's Supermarket</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/addProduct">Add new/more products</a>
          </li>
          <li class="nav-item">
            <div class="d-flex justify-content-center">
              <form class="d-flex"></form>
              <input class="form-control me-2" type="text" placeholder="Search" style="width: 500px;">
              <button class="btn btn-primary" type="button">Search</button>
              </form>
            </div>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container">
    <br>
    <div class="text-center">
      <h2>Product Details</h2>
    </div>
    <br>
    <% if (product) { %> <!-- Check if product data exists -->
      <div>
        <p><b>Product Name:</b><br>
          <%= product.productName %>
        </p>
        <p><b>Product Image:</b><br><br> <img src="/images/<%= product.productImage %>" width="25%"><br><br></p>
        <p><b>Product Quantity:</b><br>
          <%= product.productQuantity %>
        </p>
        <p><b>Price:</b><br> $<%= product.productPrice %>
        </p>
      </div>
      <% } else { %>
        <p>No product found.</p>
        <% } %>
          <a href="/">Back</a>
  </div>

</body>

</html>